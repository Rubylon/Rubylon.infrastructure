filebeat:
  prospectors:
    -
      paths:
        - "/var/log/nginx/access.json.log"
      input_type: log
      document_type: nginx
      fields:
        environment: <%= node.chef_environment %>
      fields_under_root: true
      ignore_older: 2h
    -
      paths:
        - "/var/log/nginx/error.log"
      input_type: log
      document_type: nginx_error
      fields:
        environment: <%= node.chef_environment %>
      fields_under_root: true
      ignore_older: 2h
output:
  logstash:
    hosts: ["<%= @logstash_endpoint %>"]
    index: logstash
